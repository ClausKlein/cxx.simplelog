# =============================================================================
# EDITOR CONFIGURATION: http://editorconfig.org
# =============================================================================

root = true

# -- DEFAULT: Unix-style newlines with a newline ending every file.
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{rst,ini,txt,md}]
indent_style = space
indent_size = 4

[*.{cpp,hpp}]
indent_style = space
indent_size = 4

[**/makefile]
indent_style = tab

[*.{py}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{cmd,bat,ps1}]
end_of_line = crlf
